{
  "name": "ordbokapi",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "ISC",
  "engines": {
    "node": ">=22.5.1",
    "yarn": ">=4.3.1"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json && node ./copy-head.mjs",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "tsc --build tsconfig.build.json && node dist/main",
    "start:dev": "run-on-tsc-build yarn node dist/main.js",
    "start:debug": "NEST_DEBUG=true yarn start:dev",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/fastify": "^3.0.0",
    "@nestjs/apollo": "^13.0.2",
    "@nestjs/common": "^11.0.5",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.5",
    "@nestjs/graphql": "^13.0.2",
    "@nestjs/platform-fastify": "^11.0.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "fastify": "^5.2.1",
    "graphql": "^16.10.0",
    "lru-cache": "^11.0.2",
    "memjs": "^1.3.2",
    "ordbokapi-common": "workspace:^",
    "reflect-metadata": "^0.2.2",
    "request-ip": "^3.3.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/memjs": "^1.3.3",
    "@types/node": "^24.0.0",
    "@types/request-ip": "^0.0.41",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "jest-junit": "^16.0.0",
    "jest-util": "^30.0.0",
    "prettier": "^3.4.2",
    "run-on-tsc-build": "workspace:^",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "setupFiles": [
      "<rootDir>/../jest.setup.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
